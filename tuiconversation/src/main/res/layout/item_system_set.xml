<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F7F7F7"
    >
    <TextView
        android:id="@+id/tv_system_set_pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上午3:10"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/save_btn_system"
        android:gravity="center"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/save_btn_system_content"
       android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        >

        <TextView
            android:id="@+id/tv_system_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文本演示文本演示"
            android:textColor="#333333"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/tv_system_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-06-13 15:08:14"
            android:layout_below="@+id/tv_system_title"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_sysytem_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#404040"
            android:text="文本演示文本演示文本演示文本演示文本演示文本"
            android:layout_below="@+id/tv_system_create_time"
            android:layout_marginTop="10dp"
            android:autoSizeMaxTextSize="15dp"
            android:layout_marginBottom="15dp"

            />





    </RelativeLayout>



</LinearLayout>