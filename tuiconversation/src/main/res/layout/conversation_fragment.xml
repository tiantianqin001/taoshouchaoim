<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/conversation_page_bg"
    >

    <!--系统消息-->
    <RelativeLayout
        android:id="@+id/rl_system_messaage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/iv_system_message"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/system_information"
            android:layout_marginLeft="12dp"
            />
        <TextView
            android:id="@+id/tv_system_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统消息"
            android:textColor="@color/black_font_color"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/iv_system_message"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_system_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试测试测试测试测试"
            android:textSize="12sp"
            android:textColor="@color/dialog_line_bg"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_system_message"
            android:layout_below="@+id/tv_system_message"
            android:layout_marginTop="6dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/conversation_item_top_color"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="8dp"
            />
    </RelativeLayout>
    <com.tencent.qcloud.tuikit.tuiconversation.ui.view.ConversationLayout
        android:id="@+id/conversation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

</LinearLayout>
