<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F7F7F7"
    >
    <TextView
        android:id="@+id/tv_system_set_pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上午3:10"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/save_btn_system"
        android:gravity="center"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:background="@drawable/save_btn_system_content"
       android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        >

        <TextView
            android:id="@+id/tv_paylent_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#1A1A1A"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_system_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_paylent_title"
            android:layout_marginTop="4dp"
            android:textColor="#999999"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_money_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_system_create_time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="15dp"
            android:autoSizeMaxTextSize="15dp"
            android:text="提现金额"
            android:textColor="#999999"
            android:textSize="15sp"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_money_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="￥100.00"
            android:textColor="#1A1A1A"
            android:textSize="45sp"
            android:visibility="gone"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_below="@+id/tv_money"
            android:layout_marginTop="18dp"
            android:background="#EEEEEE"
            />

        <LinearLayout
            android:id="@+id/ll_withdrawal_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_money"
            android:layout_marginTop="36dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现方式："
                android:textColor="#666666"
                android:textSize="14sp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:text="银行卡"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ll_withdrawal_method"
            android:layout_marginTop="8dp"
            android:visibility="gone"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡号："
                android:textColor="#666666"
                android:textSize="14sp"

                />
            <TextView
                android:id="@+id/tv_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:text="*************1234"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ll_card_number"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到账时间："
                android:textColor="#666666"
                android:textSize="14sp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:text="1小时内到账"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>





    </RelativeLayout>



</LinearLayout>