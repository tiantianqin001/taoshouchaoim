<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/qb_px_20"
    >

    <include layout="@layout/base_title_bar_layout" />

    <TextView
        android:layout_marginTop="@dimen/qb_px_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_40"
        android:paddingLeft="@dimen/qb_px_20"
        android:paddingRight="@dimen/qb_px_20"
        android:textSize="@dimen/qb_px_14"
        android:text="最近登录设备: 你可以删除列表中设备,删除后在该设备登录需要进行身份验证"
        android:background="#F7F7F7"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_device_manage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/qb_px_6"
        android:background="@color/white"
        android:paddingLeft="@dimen/qb_px_20"

        />



    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/qb_px_20"
        android:text="暂无数据"
        android:gravity="center"
        android:visibility="gone"
        />

</LinearLayout>