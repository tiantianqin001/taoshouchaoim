<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/base_title_bar_layout" />

    <LinearLayout
        android:id="@+id/cash_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_55"
        android:layout_marginLeft="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_marginRight="@dimen/qb_px_12"
        android:background="@drawable/bg_list_item"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/qb_px_10"
        android:paddingEnd="@dimen/qb_px_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值账户"
            android:textColor="#333333"
            android:textSize="@dimen/qb_px_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_5"
            android:layout_weight="1"
            android:gravity="end"
            android:hint="请选择充值账户"
            android:textColor="#333333"
            android:textSize="@dimen/qb_px_14" />

        <ImageView
            android:layout_width="@dimen/qb_px_18"
            android:layout_height="@dimen/qb_px_18"
            android:src="@mipmap/me_back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_55"
        android:layout_marginLeft="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_marginRight="@dimen/qb_px_12"
        android:background="@drawable/bg_list_item"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/qb_px_10"
        android:paddingEnd="@dimen/qb_px_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="#FF7F00"
            android:textSize="@dimen/qb_px_24"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_5"
            android:background="@null"
            android:hint="请输入充值金额(元)"
            android:textColor="#333333"
            android:textColorHint="#CCCCCC"
            android:textSize="@dimen/qb_px_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_20"
        android:layout_marginRight="@dimen/qb_px_12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cash1"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_50"
            android:layout_weight="1"
            android:background="@drawable/recharge_unselected_item_bg"
            android:gravity="center"
            android:text="￥10元"
            android:textColor="#FF7F00"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:id="@+id/cash2"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_50"
            android:layout_marginLeft="@dimen/qb_px_18"
            android:layout_weight="1"
            android:background="@drawable/recharge_unselected_item_bg"
            android:gravity="center"
            android:text="￥50元"
            android:textColor="#FF7F00"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:id="@+id/cash3"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_50"
            android:layout_marginLeft="@dimen/qb_px_18"
            android:layout_weight="1"
            android:background="@drawable/recharge_unselected_item_bg"
            android:gravity="center"
            android:text="￥100元"
            android:textColor="#FF7F00"
            android:textSize="@dimen/qb_px_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_15"
        android:layout_marginRight="@dimen/qb_px_12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cash4"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_50"
            android:layout_weight="1"
            android:background="@drawable/recharge_unselected_item_bg"
            android:gravity="center"
            android:text="￥200元"
            android:textColor="#FF7F00"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:id="@+id/cash5"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_50"
            android:layout_marginLeft="@dimen/qb_px_18"
            android:layout_weight="1"
            android:background="@drawable/recharge_unselected_item_bg"
            android:gravity="center"
            android:text="￥500元"
            android:textColor="#FF7F00"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:id="@+id/cash6"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_50"
            android:layout_marginLeft="@dimen/qb_px_18"
            android:layout_weight="1"
            android:background="@drawable/recharge_unselected_item_bg"
            android:gravity="center"
            android:text="￥1000元"
            android:textColor="#FF7F00"
            android:textSize="@dimen/qb_px_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_25"
        android:text="充值说明"
        android:textColor="#FF7F00"
        android:textSize="@dimen/qb_px_12" />

    <TextView
        android:id="@+id/submit"
        android:layout_width="@dimen/qb_px_230"
        android:layout_height="@dimen/qb_px_40"
        android:layout_marginTop="@dimen/qb_px_25"
        android:background="@drawable/bg_modify_btn"
        android:gravity="center"
        android:text="充值"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/qb_px_15" />
</LinearLayout>