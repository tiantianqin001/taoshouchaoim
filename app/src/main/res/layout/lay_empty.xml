<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@mipmap/leak_resource"
    />

    <com.outsource.environment_protection.dialoge.CustomLoadingView
        android:id="@+id/loading"
        android:layout_width="@dimen/qb_px_160"
        android:layout_height="@dimen/qb_px_160"
        android:visibility="gone"
        tools:visibility="visible"
        app:round_inside_color="@color/color_hint"
        app:round_outside_color="@color/color_hint"
        />

    <TextView
        android:id="@+id/txt_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/qb_px_16"
        android:layout_marginTop="@dimen/qb_px_16"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/color_hint"
        android:visibility="gone"
        />
</LinearLayout>