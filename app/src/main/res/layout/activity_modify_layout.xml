<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/base_title_bar_layout" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_45"
        android:layout_marginLeft="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_marginRight="@dimen/qb_px_12"
        android:background="@drawable/bg_list_item"
        android:hint="手机号"
        android:paddingLeft="@dimen/qb_px_15"
        android:paddingRight="@dimen/qb_px_15"
        android:textColorHint="#CCCCCC"
        android:textSize="@dimen/qb_px_15"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_45"
        android:layout_marginLeft="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_14"
        android:layout_marginRight="@dimen/qb_px_12"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/sms"
            android:layout_width="@dimen/qb_px_203"
            android:layout_height="match_parent"
            android:background="@drawable/bg_list_item"
            android:hint="验证码"
            android:paddingLeft="@dimen/qb_px_15"
            android:paddingRight="@dimen/qb_px_15"
            android:textColorHint="#CCCCCC"
            android:textSize="@dimen/qb_px_15" />

        <TextView
            android:id="@+id/yzm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="#333333"
            android:textSize="@dimen/qb_px_15" />
    </LinearLayout>

    <EditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_45"
        android:layout_marginLeft="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_14"
        android:layout_marginRight="@dimen/qb_px_12"
        android:background="@drawable/bg_list_item"
        android:hint="请输入6位数旧密码"
        android:paddingLeft="@dimen/qb_px_15"
        android:paddingRight="@dimen/qb_px_15"
        android:textColor="#333333"
        android:textColorHint="#CCCCCC"
        android:textSize="@dimen/qb_px_15" />

    <EditText
        android:id="@+id/pwd2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_45"
        android:layout_marginLeft="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_14"
        android:layout_marginRight="@dimen/qb_px_12"
        android:background="@drawable/bg_list_item"
        android:hint="请再次输入6位数新密码"
        android:paddingLeft="@dimen/qb_px_15"
        android:paddingRight="@dimen/qb_px_15"
        android:textColor="#333333"
        android:textColorHint="#CCCCCC"
        android:textSize="@dimen/qb_px_15" />

    <TextView
        android:id="@+id/submit"
        android:layout_width="@dimen/qb_px_230"
        android:layout_height="@dimen/qb_px_40"
        android:layout_marginTop="@dimen/qb_px_70"
        android:background="@drawable/bg_modify_btn"
        android:gravity="center"
        android:text="完成"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/qb_px_15" />
</LinearLayout>