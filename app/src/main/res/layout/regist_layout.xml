<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:circletextview="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/ll_login_del"
            android:layout_width="@dimen/qb_px_200"
            android:layout_height="@dimen/qb_px_70">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_del"
                android:layout_marginLeft="@dimen/qb_px_14"
                android:layout_marginTop="@dimen/qb_px_30"

                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/qb_px_40"
            android:paddingRight="@dimen/qb_px_40"
            >

            <TextView
                android:id="@+id/tv_login_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/qb_px_46"
                android:text="注册账号"
                android:textColor="@color/chengyan_account_login"
                android:textSize="@dimen/qb_px_27"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/qb_px_56"

                />
            <!--头像-->

            <!--账号-->
            <RelativeLayout
                android:id="@+id/rl_account_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_46"
                android:layout_marginTop="@dimen/qb_px_65"
                >

                <TextView
                    android:id="@+id/tv_account_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_16"
                    android:layout_marginTop="@dimen/qb_px_12"
                    android:text="账号"
                    android:textColor="@color/login_user_name"
                    android:textSize="@dimen/qb_px_16" />

                <View
                    android:layout_width="@dimen/qb_px_1"
                    android:layout_height="@dimen/qb_px_12"
                    android:layout_marginLeft="@dimen/qb_px_20"
                    android:layout_marginTop="@dimen/qb_px_12"

                    android:layout_toRightOf="@+id/tv_account_number"
                    android:background="@color/login_user_line"
                    android:layout_centerVertical="true"
                    />

                <EditText
                    android:id="@+id/et_login_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/qb_px_40"
                    android:layout_toRightOf="@+id/tv_account_number"
                    android:background="@null"
                    android:hint="输入手机号"
                    android:inputType="number"
                    android:textSize="@dimen/qb_px_14"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_1"
                    android:background="@color/login_bage_line"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/qb_px_16"
                    />


            </RelativeLayout>
            <!--验证码-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_46"
                android:layout_marginTop="@dimen/qb_px_20"

                >

                <TextView
                    android:id="@+id/tv_verification_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/qb_px_12"
                    android:text="验证码"
                    android:textColor="@color/login_user_name"
                    android:textSize="@dimen/qb_px_16" />

                <View
                    android:layout_width="@dimen/qb_px_1"
                    android:layout_height="@dimen/qb_px_12"
                    android:background="@color/login_user_line"
                    android:layout_toRightOf="@+id/tv_verification_code"
                    android:layout_marginLeft="@dimen/qb_px_20"
                    android:layout_marginTop="@dimen/qb_px_3"
                    android:layout_centerVertical="true"
                    />

                <EditText
                    android:id="@+id/et_verification_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/qb_px_40"
                    android:layout_toRightOf="@+id/tv_verification_code"
                    android:background="@null"
                    android:hint="输入验证码"
                    android:inputType="number"
                    android:textSize="@dimen/qb_px_14"

                    />

                <TextView
                    android:id="@+id/btn_captcha"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textAllCaps="false"
                    android:textColor="@color/regist_erification_code"
                    android:textSize="@dimen/qb_px_13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_1"
                    android:background="@color/login_bage_line"
                    android:layout_alignParentBottom="true"
                    />


            </RelativeLayout>
            <!--昵称-->
            <RelativeLayout
                android:id="@+id/rl_invitation_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_46"
                android:layout_marginTop="@dimen/qb_px_10"
                >
                <TextView
                    android:id="@+id/tv_invitation_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="昵称"
                    android:textSize="@dimen/qb_px_16"
                    android:textColor="@color/login_user_name"
                    android:layout_marginTop="@dimen/qb_px_12"
                    android:layout_marginLeft="@dimen/qb_px_12"
                    />

                <View
                    android:layout_width="@dimen/qb_px_1"
                    android:layout_height="@dimen/qb_px_12"
                    android:layout_marginLeft="@dimen/qb_px_22"
                    android:layout_marginTop="@dimen/qb_px_16"
                    android:layout_toRightOf="@+id/tv_invitation_code"
                    android:background="@color/login_user_line" />
                <EditText
                    android:id="@+id/et_invitation_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="设置昵称"
                    android:textSize="@dimen/qb_px_14"
                    android:layout_marginLeft="@dimen/qb_px_40"
                    android:background="@null"
                    android:layout_toRightOf="@+id/tv_invitation_code"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/login_bage_line"
                    android:layout_marginLeft="@dimen/qb_px_16"

                    />


            </RelativeLayout>
            <!--密码-->
            <RelativeLayout
                android:id="@+id/rl_invitation_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_46"
                android:layout_marginTop="@dimen/qb_px_10"
                >

                <TextView
                    android:id="@+id/tv_invitation_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_16"
                    android:layout_marginTop="@dimen/qb_px_12"
                    android:text="密码"
                    android:textColor="@color/login_user_name"
                    android:textSize="@dimen/qb_px_16" />

                <View
                    android:layout_width="@dimen/qb_px_1"
                    android:layout_height="@dimen/qb_px_12"
                    android:background="@color/login_user_line"
                    android:layout_toRightOf="@+id/tv_invitation_password"
                    android:layout_marginLeft="@dimen/qb_px_20"
                    android:layout_marginTop="@dimen/qb_px_3"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:id="@+id/et_invitation_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="6-12位字母数字组合"
                    android:inputType="textPassword"
                    android:textSize="@dimen/qb_px_14"
                    android:layout_marginLeft="@dimen/qb_px_40"
                    android:background="@null"
                    android:layout_toRightOf="@+id/tv_invitation_password"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/qb_px_16"
                    android:background="@color/login_bage_line" />


            </RelativeLayout>
            <!--再次输入密码-->
            <RelativeLayout
                android:id="@+id/rl_invitation_two_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_46"
                android:layout_marginTop="@dimen/qb_px_10"
                >

                <TextView
                    android:id="@+id/tv_invitation_two_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_16"
                    android:layout_marginTop="@dimen/qb_px_12"
                    android:text="密码"
                    android:textColor="@color/login_user_name"
                    android:textSize="@dimen/qb_px_16" />

                <View
                    android:layout_width="@dimen/qb_px_1"
                    android:layout_height="@dimen/qb_px_12"
                    android:background="@color/login_user_line"
                    android:layout_toRightOf="@+id/tv_invitation_two_password"
                    android:layout_marginLeft="@dimen/qb_px_20"
                    android:layout_marginTop="@dimen/qb_px_3"
                    android:layout_centerVertical="true"
                    />

                <EditText
                    android:id="@+id/et_invitation_two_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/qb_px_40"
                    android:layout_toRightOf="@+id/tv_invitation_two_password"
                    android:background="@null"
                    android:hint="再次输入密码"
                    android:inputType="textPassword"
                    android:textSize="@dimen/qb_px_14"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_1"
                    android:background="@color/login_bage_line"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/qb_px_16"
                    />


            </RelativeLayout>

            <!--登录-->
            <RelativeLayout
                android:id="@+id/rl_login_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_44"
                android:background="@mipmap/bg_login"
                android:layout_marginTop="@dimen/qb_px_40"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/qb_px_16" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_go_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_60"
                android:text="有账号去登陆"
                android:textSize="@dimen/qb_px_12"
                android:textColor="@color/regist_erification_code"
                android:gravity="center"
                />
        </LinearLayout>


    </LinearLayout>




    <ImageView
        android:id="@+id/ctv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/qb_px_100"
        android:visibility="invisible"
        />



</FrameLayout>