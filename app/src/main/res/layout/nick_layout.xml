<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_title_bar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_45"
        android:layout_marginLeft="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_marginRight="@dimen/qb_px_10"
        android:background="@drawable/save_nick_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/qb_px_12"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入姓名"
            android:textColor="#333333"
            android:textColorHint="#CCCCCC"
            android:textSize="@dimen/qb_px_15" />

        <ImageView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/qb_px_10"
            android:paddingEnd="@dimen/qb_px_10"
            android:src="@mipmap/persion_del" />

    </LinearLayout>

    <TextView
        android:id="@+id/submit"
        android:layout_width="@dimen/qb_px_150"
        android:layout_height="@dimen/qb_px_36"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_78"
        android:background="@drawable/save_nick_ok_bg"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/qb_px_15" />


</LinearLayout>