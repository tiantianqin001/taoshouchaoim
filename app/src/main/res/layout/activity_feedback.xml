<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF3"
    android:orientation="vertical">

    <include layout="@layout/base_title_bar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_15"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/qb_px_15">

        <EditText
            android:id="@+id/et_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left"
            android:hint="请填写您的反馈内容..."
            android:maxLength="251"
            android:minLines="8"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0/250"
            android:visibility="visible"
            tools:visibility="visible" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_to_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qb_px_18"
        android:layout_marginTop="@dimen/qb_px_28"
        android:layout_marginEnd="@dimen/qb_px_18"
        android:background="@drawable/seal_login_btn_selector"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="17dp" />

</LinearLayout>