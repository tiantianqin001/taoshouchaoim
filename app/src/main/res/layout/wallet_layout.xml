<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_180"
        android:background="@drawable/bg_wallet_title"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_45">

            <ImageView
                android:id="@+id/ll_base_back"
                android:layout_width="@dimen/qb_px_27"
                android:layout_height="@dimen/qb_px_27"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/qb_px_12"
                android:src="@mipmap/wall_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的钱包"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/qb_px_18" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_my_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_20"
            android:text="0.00"
            android:textColor="@color/white"
            android:textSize="@dimen/qb_px_43" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号余额（元）"
            android:textColor="@color/white"
            android:textSize="@dimen/qb_px_10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_69"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/recharge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/qb_px_145"
                android:layout_height="@dimen/qb_px_55"
                android:src="@mipmap/recharge_wallet" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cashout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/qb_px_145"
                android:layout_height="@dimen/qb_px_55"
                android:src="@mipmap/withdraw_wallet" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_9"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_bank_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_56"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/qb_px_12"
            android:paddingEnd="@dimen/qb_px_20">

            <ImageView
                android:id="@+id/iv_bank_card"
                android:layout_width="@dimen/qb_px_27"
                android:layout_height="@dimen/qb_px_27"
                android:src="@mipmap/bank_card_wallet" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_17"
                android:layout_weight="1"
                android:text="银行卡"
                android:textColor="#333333"
                android:textSize="@dimen/qb_px_15" />

            <ImageView
                android:layout_width="@dimen/qb_px_20"
                android:layout_height="@dimen/qb_px_20"
                android:src="@mipmap/wall_right_back" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:layout_marginLeft="@dimen/qb_px_17"
            android:background="#EEEEEE" />

        <LinearLayout
            android:id="@+id/order_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_56"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/qb_px_12"
            android:paddingEnd="@dimen/qb_px_20">

            <ImageView
                android:id="@+id/iv_billing_details"
                android:layout_width="@dimen/qb_px_27"
                android:layout_height="@dimen/qb_px_27"
                android:src="@mipmap/billing_details_wallet" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_17"
                android:layout_weight="1"
                android:text="账单明细"
                android:textColor="#333333"
                android:textSize="@dimen/qb_px_15" />

            <ImageView
                android:layout_width="@dimen/qb_px_20"
                android:layout_height="@dimen/qb_px_20"
                android:src="@mipmap/wall_right_back" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:layout_marginLeft="@dimen/qb_px_17"
            android:background="#EEEEEE" />

        <LinearLayout
            android:id="@+id/rl_payment_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_56"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/qb_px_12"
            android:paddingEnd="@dimen/qb_px_20">

            <ImageView
                android:id="@+id/iv_payment_password"
                android:layout_width="@dimen/qb_px_27"
                android:layout_height="@dimen/qb_px_27"
                android:src="@mipmap/payment_password" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_17"
                android:layout_weight="1"
                android:text="支付设置"
                android:textColor="#333333"
                android:textSize="@dimen/qb_px_15" />

            <ImageView
                android:layout_width="@dimen/qb_px_20"
                android:layout_height="@dimen/qb_px_20"
                android:src="@mipmap/wall_right_back" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:layout_marginLeft="@dimen/qb_px_17"
            android:background="#EEEEEE" />

        <LinearLayout
            android:id="@+id/rl_identification"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_56"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/qb_px_12"
            android:paddingEnd="@dimen/qb_px_20">

            <ImageView
                android:id="@+id/iv_identification"
                android:layout_width="@dimen/qb_px_27"
                android:layout_height="@dimen/qb_px_27"
                android:src="@mipmap/ic_coin_purse2_verified" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_17"
                android:layout_weight="1"
                android:text="实名认证"
                android:textColor="#333333"
                android:textSize="@dimen/qb_px_15" />


            <TextView
                android:id="@+id/realStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已实名"
                android:textColor="#666666"
                android:textSize="@dimen/qb_px_14"
                android:visibility="gone" />

            <ImageView
                android:layout_width="@dimen/qb_px_20"
                android:layout_height="@dimen/qb_px_20"
                android:src="@mipmap/wall_right_back" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:layout_marginLeft="@dimen/qb_px_17"
            android:background="#EEEEEE"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/rl_modify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_56"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/qb_px_12"
            android:paddingEnd="@dimen/qb_px_20"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_modify"
                android:layout_width="@dimen/qb_px_27"
                android:layout_height="@dimen/qb_px_27"
                android:src="@mipmap/ic_coin_purse2_change_payment_password" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_17"
                android:layout_weight="1"
                android:text="修改支付密码"
                android:textColor="#333333"
                android:textSize="@dimen/qb_px_15" />

            <ImageView
                android:layout_width="@dimen/qb_px_20"
                android:layout_height="@dimen/qb_px_20"
                android:src="@mipmap/wall_right_back" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>