<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/qb_px_360"
        android:layout_height="@dimen/qb_px_200"
        android:background="@drawable/shape_round_corner_tips_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tips_img"
            android:layout_width="@dimen/qb_px_90"
            android:layout_height="@dimen/qb_px_90"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/qb_px_36"
            android:src="@mipmap/icon_user"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tips_description"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/qb_px_51"
            android:layout_weight="1"
            android:textSize="@dimen/qb_px_18"
            android:text="小朋友想好了么，确认提交答案了么？"
            android:textColor="@color/white"


            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5E5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:minHeight="@dimen/qb_px_93"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tips_cancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="再想想"
                android:textColor="#FF4444"
                android:textSize="@dimen/qb_px_18" />

            <View
                android:id="@+id/tips_bottom_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E5E5E5" />

            <TextView
                android:id="@+id/tips_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="#4562CF"
                android:textSize="@dimen/qb_px_18" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>