<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical">

    <include layout="@layout/base_title_bar_layout" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_48"
        android:background="#FFFFFF"
        app:tl_indicator_color="#FF7F00"
        app:tl_indicator_corner_radius="@dimen/qb_px_3"
        app:tl_indicator_height="@dimen/qb_px_3"
        app:tl_indicator_width="@dimen/qb_px_23"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="#FF7F00"
        app:tl_textUnselectColor="#999999"
        app:tl_textsize="@dimen/qb_px_16" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/qb_px_10" />
</LinearLayout>