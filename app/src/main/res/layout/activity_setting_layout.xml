<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical">

    <include layout="@layout/base_title_bar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_56"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/qb_px_16"
            android:paddingEnd="@dimen/qb_px_12">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关于我们"
                android:textColor="#333333"
                android:textSize="@dimen/qb_px_15" />

            <ImageView
                android:layout_width="@dimen/qb_px_18"
                android:layout_height="@dimen/qb_px_18"
                android:src="@mipmap/me_back" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/qb_px_12"
            android:layout_marginEnd="@dimen/qb_px_12"
            android:background="#F2F2F2" />

        <LinearLayout
            android:id="@+id/writeoff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_56"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/qb_px_16"
            android:paddingEnd="@dimen/qb_px_12">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="注销账号"
                android:textColor="#FF2131"
                android:textSize="@dimen/qb_px_15" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/loginout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_50"
        android:layout_marginTop="@dimen/qb_px_25"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="退出"
        android:textColor="#FF2131"
        android:textSize="@dimen/qb_px_15" />

</LinearLayout>