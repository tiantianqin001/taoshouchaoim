<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_photograph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/qb_px_22"
        android:paddingBottom="@dimen/qb_px_15"
        android:text="拍照"
        android:textColor="#333333"
        android:textSize="@dimen/qb_px_15"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_dialoge_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/qb_px_15"
        android:paddingBottom="@dimen/qb_px_15"
        android:text="相册"
        android:textColor="#333333"
        android:textSize="@dimen/qb_px_15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_save_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/qb_px_15"
        android:paddingBottom="@dimen/qb_px_18"
        android:text="保存图片"
        android:textColor="#333333"
        android:textSize="@dimen/qb_px_15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_quess"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_44"
        android:layout_marginLeft="@dimen/qb_px_26"
        android:layout_marginRight="@dimen/qb_px_24"
        android:layout_marginBottom="@dimen/qb_px_15"
        android:background="@drawable/save_photo_bg"
        android:gravity="center"
        android:text="取消"
        android:textSize="@dimen/qb_px_15"
        android:textStyle="bold" />

</LinearLayout>