<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/qb_px_305"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_common_dialog"
    android:orientation="vertical"
    android:paddingStart="@dimen/qb_px_28"
    android:paddingTop="@dimen/qb_px_17"
    android:paddingEnd="@dimen/qb_px_28"
    android:paddingBottom="@dimen/qb_px_24">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#333333 "
        android:textSize="@dimen/qb_px_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:layout_marginTop="@dimen/qb_px_18"
        android:background="#EEEEEE " />

    <LinearLayout
        android:id="@+id/operation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_22"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_txt"
                android:layout_width="@dimen/qb_px_85"
                android:layout_height="@dimen/qb_px_35"
                android:background="@drawable/bg_common_btn_input"
                android:gravity="center"
                android:text="取消"
                android:textColor="#666666"
                android:textSize="@dimen/qb_px_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/positive_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/positive_txt"
                android:layout_width="@dimen/qb_px_85"
                android:layout_height="@dimen/qb_px_35"
                android:background="@drawable/bg_common_btn_positive"
                android:gravity="center"
                android:text="确认"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/qb_px_15" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>